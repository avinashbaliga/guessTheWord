<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/guessTheWordTV"
        style="@style/guessTheWordTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/guessTheWord"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/wordTV"
        style="@style/guessWord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Avinash"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.4" />

    <TextView
        android:id="@+id/yourScoreTitle"
        style="@style/yourScoreTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your Score"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wordTV"
        app:layout_constraintVertical_bias="0.3" />

    <TextView
        android:id="@+id/scoreCard"
        style="@style/scoreCardStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/scoreCardMargin"
        android:text="0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/yourScoreTitle" />

    <Button
        android:id="@+id/gotItButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Got It"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreCard"
        android:layout_margin="@dimen/buttonMargin"
        android:background="@color/purple_200"/>

    <Button
        android:id="@+id/skipButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Skip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scoreCard"
        android:layout_margin="@dimen/buttonMargin"
        android:textColor="@color/purple_500"
        android:background="@color/white"/>

</androidx.constraintlayout.widget.ConstraintLayout>